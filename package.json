{
  "name": "react-smart-tabs",
  "version": "0.0.15",
  "description": "A tab component with drag and drop functionality, add and close",
  "main": "dist/bundle.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "webpack-dev-server --content-base ./dist --host 0.0.0.0  --hot --inline --colors --port 3000 --open",
    "build": "rollup -c"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test-shim.js",
      "<rootDir>/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/components/tabs/**/*.{ts,tsx}"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/test-preprocessor.js",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    }
  },
  "keywords": [
    "React",
    "Tabs",
    "Hooks"
  ],
  "author": "Gusavo Freire Santos",
  "license": "MIT",
  "devDependencies": {
    "@types/enzyme": "^3.10.1",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "awesome-typescript-loader": "^5.2.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "jest": "^24.8.0",
    "postcss-preset-env": "^6.6.0",
    "react-test-renderer": "^16.8.6",
    "rollup": "^1.17.0",
    "rollup-plugin-scss": "^1.0.1",
    "rollup-plugin-typescript": "^1.0.1",
    "source-map-loader": "^0.2.4",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "ts-loader": "^6.0.4",
    "tslib": "^1.10.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.5.3",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2"
  },
  "dependencies": {
    "@testing-library/react": "^8.0.7",
    "@testing-library/react-hooks": "^1.1.0",
    "@types/uuid": "^3.4.5",
    "autoprefixer": "^9.6.1",
    "html-webpack-plugin": "^3.2.0",
    "postcss": "^7.0.17",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.1.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rollup-plugin-terser": "^5.1.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "tslint": "^5.18.0",
    "uuid": "^3.3.2"
  }
